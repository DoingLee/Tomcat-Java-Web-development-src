<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 


 <!-- The Usual Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.htm</welcome-file>
  </welcome-file-list>

 <servlet>
    <servlet-name>locale</servlet-name>
    <servlet-class>LocaleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>locale</servlet-name>
    <url-pattern>locale</url-pattern>
  </servlet-mapping>

 <servlet>
    <servlet-name>bundle</servlet-name>
    <servlet-class>BundleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>bundle</servlet-name>
    <url-pattern>bundle</url-pattern>
  </servlet-mapping>

 <servlet>
    <servlet-name>message</servlet-name>
    <servlet-class>MessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>message</servlet-name>
    <url-pattern>message</url-pattern>
  </servlet-mapping>

</web-app>
